<plugin>
   <extension
         point="org.eclipse.ui.newWizards">
   </extension>
   
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipse.gemoc.trace.gemoc.ui.category"
            name="Gemoc Trace commands">
      </category>
      <command
            categoryId="org.eclipse.gemoc.trace.gemoc.ui.category"
            defaultHandler="org.eclipse.gemoc.trace.gemoc.ui.commands.XDSMLProject2TraceAddonHandler"
            id="org.eclipse.gemoc.execution.sequential.javaxdsml.ide.ui.commands.GenerateTraceAddonPlugin"
            name="GenerateTraceAddonPlugin">
      </command>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=xdsmlGroup">
         <menu
               icon="icons/IconeGemocLanguage-16.png"
               id="GemocLanguage.menu"
               label="GEMOC Language">
            <command
                  commandId="org.eclipse.gemoc.execution.sequential.javaxdsml.ide.ui.commands.GenerateTraceAddonPlugin"
                  icon="icons/generate-16.png"
                  label="Generate Multidimensional Trace Addon project for language"
                  style="push">
               <visibleWhen
                     checkEnabled="false">
                  <with
                        variable="selection">
                     <count
                           value="1">
                     </count>
                     <iterate
                           ifEmpty="false">
                        <reference
                              definitionId="org.eclipse.gemoc.execution.sequential.javaxdsml.ide.ui.definitions.IsSelectionInGemocSequentialLanguageProject">
                        </reference>
                     </iterate>
                  </with>
               </visibleWhen>
            </command>
         </menu>
      </menuContribution>
   </extension>
   <extension
         point="org.eclipse.core.expressions.definitions">
      <definition
            id="org.eclipse.gemoc.execution.sequential.javaxdsml.ide.ui.definitions.IsSelectionInGemocSequentialLanguageProject">
         <adapt
               type="org.eclipse.core.resources.IResource">
            <test
                  property="org.eclipse.core.resources.projectNature "
                  value="org.eclipse.gemoc.execution.sequential.javaxdsml.ide.ui.GemocSequentialLanguageNature">
            </test>
         </adapt>
      </definition>
   </extension>

</plugin>
