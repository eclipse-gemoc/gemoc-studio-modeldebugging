<plugin>
   <extension
         point="org.eclipse.ui.perspectives">
      <perspective
            class="org.eclipse.gemoc.xdsmlframework.ide.ui.perspective.XDSMLPerspectiveFactory"
            icon="icons/IconeGemocLanguage-16.png"
            id="org.eclipse.gemoc.xdsmlframework.ide.ui.xdsml.perspective"
            name="xDSML">
      </perspective>
   </extension>
   <extension
         point="org.eclipse.ui.perspectiveExtensions">
      <perspectiveExtension
            targetID="org.eclipse.gemoc.xdsmlframework.ide.ui.xdsml.perspective">
         <newWizardShortcut
               id="fr.inria.diverse.k3.ui.wizards.NewK3XtendClassWizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="org.eclipse.jdt.ui.wizards.NewClassCreationWizard">
         </newWizardShortcut>
         <newWizardShortcut
               id="org.eclipse.xtend.ide.wizards.NewXtendClassWizard">
         </newWizardShortcut>
      </perspectiveExtension>
   </extension>
   <extension
         point="org.eclipse.ui.menus">
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.popup.any?after=additions">
         <separator
               name="xdsmlGroup"
               visible="true">
         </separator>
         <separator
               name="xdsmlGroupEnd"
               visible="true">
         </separator>
      </menuContribution>
      <menuContribution
            allPopups="false"
            locationURI="popup:org.eclipse.ui.projectConfigure?after=additions">
         <command
               commandId="org.eclipse.gemoc.xdsmlframework.ide.ui.addRemoveGemocLanguageProjectNature"
               icon="icons/IconeGemocLanguage-16.png"
               label="Add GEMOC Language Project Nature"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <not>
                           <test
                                 property="org.eclipse.core.resources.projectNature"
                                 value="org.eclipse.gemoc.xdsmlframework.ide.ui.GemocLanguageProjectNature">
                           </test>
                        </not>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <command
               commandId="org.eclipse.gemoc.xdsmlframework.ide.ui.addRemoveGemocLanguageProjectNature"
               icon="icons/IconeGemocLanguage-16.png"
               label="Remove GEMOC Language Project Nature"
               style="push">
            <visibleWhen
                  checkEnabled="false">
               <with
                     variable="selection">
                  <count
                        value="1">
                  </count>
                  <iterate>
                     <adapt
                           type="org.eclipse.core.resources.IProject">
                        <test
                              property="org.eclipse.core.resources.projectNature"
                              value="org.eclipse.gemoc.xdsmlframework.ide.ui.GemocLanguageProjectNature">
                        </test>
                     </adapt>
                  </iterate>
               </with>
            </visibleWhen>
         </command>
         <separator
               name="xdsmlGroup">
         </separator>
      </menuContribution>
   </extension>
   <extension
         id="GemocLanguageProjectBuilder"
         name="GEMOC Language Project Builder"
         point="org.eclipse.core.resources.builders">
      <builder
            hasNature="true">
         <run
               class="org.eclipse.gemoc.xdsmlframework.ide.ui.builder.GemocLanguageProjectBuilder">
         </run>
      </builder>
   </extension>
   <extension
         id="GemocLanguageProjectNature"
         name="GEMOC Language Project Nature"
         point="org.eclipse.core.resources.natures">
      <runtime>
         <run
               class="org.eclipse.gemoc.xdsmlframework.ide.ui.builder.GemocLanguageProjectNature">
         </run>
      </runtime>
      <builder
            id="org.eclipse.gemoc.xdsmlframework.ide.ui.GemocLanguageProjectBuilder">
      </builder>
   </extension>
   <extension
         point="org.eclipse.ui.ide.projectNatureImages">
      <image
            icon="icons/IconeGemocLanguage-10.png"
            id="GemocLanguageProjectNature.image"
            natureId="org.eclipse.gemoc.xdsmlframework.ide.ui.GemocLanguageProjectNature">
      </image>
   </extension>
   <extension
         point="org.eclipse.ui.commands">
      <category
            id="org.eclipse.gemoc.xdsmlframework.ide.ui.GemocLanguageProjectNatureCategory"
            name="GEMOC Language Project Nature commands">
      </category>
      <command
            categoryId="org.eclipse.gemoc.xdsmlframework.ide.ui.GemocLanguageProjectNatureCategory"
            defaultHandler="org.eclipse.gemoc.xdsmlframework.ide.ui.builder.AddRemoveGemocLanguageProjectNatureHandler"
            id="org.eclipse.gemoc.xdsmlframework.ide.ui.addRemoveGemocLanguageProjectNature"
            name="Add/Remove GEMOC Language Project Nature">
      </command>
   </extension>

</plugin>
